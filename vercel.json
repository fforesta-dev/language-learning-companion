{
    "buildCommand": "echo 'No build needed for static site with serverless functions'",
    "outputDirectory": ".",
    "rewrites": [
        { "source": "/(.*)", "destination": "/index.html" }
    ],
    "functions": {
        "api/dictionary.js": {
            "memory": 1024,
            "maxDuration": 60
        },
        "api/thesaurus.js": {
            "memory": 1024,
            "maxDuration": 60
        },
        "api/translate.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}